build: [
    ["./configure"
        "--bindir" "%{bin}%"
        "--disable-tests"
        "--disable-docs"
        "--%{menhir:enable}%-parsers"
        "--disable-solving"
        "--disable-qcheck"
        "--disable-tools"
        "--enable-meta"
    ]
    [make]
]
