  "ocamlfind" { build }
  "base-bytes"
  "base-unix"
  "zarith"
  "containers" { > "0.16" }
  "sequence" { >= "0.4" }
  "gen"
  "oclock"
  "oasis"
  "msat" { >= "0.3" < "0.4" }
]
